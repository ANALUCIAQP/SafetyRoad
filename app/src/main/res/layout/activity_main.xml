<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="97dp"
        android:layout_alignParentBottom="true"
        android:background="#80444444"
        android:id="@+id/linearLayout2"
        android:layout_alignBottom="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">


        <TextView
            android:layout_width="0dp"
            android:layout_height="97dp"
            android:id="@+id/txt_speed"
            android:layout_weight="1"
            android:textSize="60sp"
            android:background="@drawable/circle_speed_limit"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="97dp"
            android:id="@+id/txt_suggested_speed"
            android:background="@drawable/dark_blue_circle"
            android:layout_weight="1"
            android:textSize="60sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="97dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="goWeather_Click"
            android:textSize="65sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_show"
        android:src="@drawable/distance_64"
        android:background="@drawable/grey_circle_64"
        android:onClick="goSearchRoute_Click"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
