<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_alignParentBottom="true"
        android:background="#80444444"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:minHeight="@dimen/abc_button_padding_vertical_material"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout2"
        android:layout_alignBottom="@+id/map">


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:id="@+id/btnvelocita"
            android:layout_weight="1"
            android:background="#80444444"
            android:src="@drawable/limitevelocita" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:id="@+id/btnconsigliata"
            android:background="#80444444"
            android:layout_weight="1"
            android:src="@drawable/velocita" />

        <TextView
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:background="#80444444"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="goWeather_Click"
            android:textSize="60sp"
            android:layout_gravity="center"
             />

    </LinearLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_show"
        android:src="@drawable/ic_setting_light"
        android:background="#f0bbbcbd"
        android:onClick="goSearchRoute_Click"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
